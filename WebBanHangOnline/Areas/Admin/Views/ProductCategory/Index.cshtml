@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/news" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/productcategory/add" class="btn btn-primary">Thêm mới </a>
                <a href="#" class="btn btn-danger" id="btnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            
            <table class="table table-hover ">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Tiêu đề</th>
                        <th>Icon</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                        <th style="width: 150px"></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {                      
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td><img src="@item.Icon" width="50px" /></td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="/admin/productcategory/edit/@item.Id" class="btn btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;

                        }

                        i++;
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>

           

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '#btnDeleteAll', function (e) {
                debugger
                e.preventDefault()
                var str = ""
                var checkbox = $(this).parents('.card').find('tr td input:checkbox')
                var i = 0
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked')
                        var _id = $(this).val()
                        if (i == 0) {
                            str += _id
                        }
                        else {
                            str += "," + _id
                        }
                        i++
                    }
                    else {
                        checkbox.attr('selected', '')

                    }
                })
                if (str.length > 0) {
                    var conf = confirm("Ban co muon xoa cac ban ghi nay khong")
                    if (conf) {
                        $.ajax({
                            url: '/admin/productcategory/DeleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload()
                                }
                            }
                        })
                    }
                }
            })
            $('body').on('change', '#SelectAll', function () {
                var checkstatus = this.checked
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox')
                checkbox.each(function () {
                    this.checked = checkstatus
                    if (this.checked) {
                        checkbox.attr('selected', 'checked')
                    }
                    else {
                        checkbox.attr('selected', '')
                    }
                })
            })
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id")
                var conf = confirm('Bạn có muốn xóa không?')
                if (conf) {
                    $.ajax({
                        url: '/admin/productcategory/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {

                            if (rs.success)
                                $('#trow_' + id).remove()
                        }
                    })
                }
            })
          
        })
    </script>
}
