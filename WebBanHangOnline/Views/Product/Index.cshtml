                            <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Blue</span></li>
                            <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Orange</span></li>
                        </ul>
                        <div class="show_more">
                            <span><span>+</span>Show More</span>
                        </div>
                    </div>*@

            </div>

            <!-- Main Content -->

            <div class="main_content">

                <!-- Products -->

                <div class="products_iso">
                    <div class="row">
                        <div class="col">

                            <!-- Product Sorting -->

                            <div class="product_sorting_container product_sorting_container_top">
                                <ul class="product_sorting">
                                    <li>
                                        <span class="type_sorting_text">Default Sorting</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_type">
                                            <li class="type_sorting_btn" data-isotope-option="{ &quot;sortBy&quot;: &quot;original-order&quot; }"><span>Default Sorting</span></li>
                                            <li class="type_sorting_btn" data-isotope-option="{ &quot;sortBy&quot;: &quot;price&quot; }"><span>Price</span></li>
                                            <li class="type_sorting_btn" data-isotope-option="{ &quot;sortBy&quot;: &quot;name&quot; }"><span>Product Name</span></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <span>Show</span>
                                        <span class="num_sorting_text">6</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><span>6</span></li>
                                            <li class="num_sorting_btn"><span>12</span></li>
                                            <li class="num_sorting_btn"><span>24</span></li>
                                        </ul>
                                    </li>
                                </ul>
                                <div class="pages d-flex flex-row align-items-center">
                                    <div class="page_current">
                                        <span> @Model.PageNumber</span>
                                        <ul class="page_selection">
                                            @for (int i = 1; i <= Model.PageCount; i++)
                                            {
                                                <li><a href="@Url.Action("Index", new { page = i })">@i</a></li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="page_total"><span>of</span> @Model.PageCount</div>
                                    @if (Model.HasNextPage)
                                    {
                                        <div id="next_page" class="page_next"><a href="@Url.Action("Index", new { page = Model.PageNumber + 1 })"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
                                    }
                                </div>


                            </div>

                            <!-- Product Grid -->

                            <div class="product-grid">

                                <!-- Product 1 -->
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        var strImg = "";
                                        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                                        if (img != null)
                                        {
                                            strImg = img.Image;
                                        }

                                        <div class="product-item @item.ProductCategory.Alias">

                                            <div class="product discount product_filter">
                                                <div class="product_image">
                                                    <img src="@strImg" alt="@item.Title">
                                                </div>
                                                <div class="favorite favorite_left"></div>
                                                @if (item.PriceSale > 0)
                                                {
                                                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Sale</span></div>

                                                }
                                                <div class="product_info">
                                                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id) ">@item.Title</a></h6>
                                                    @if (item.PriceSale > 0)
                                                    {
                                                        <div class="product_price">@WebBanHangOnline.Models.Common.FormatNumber.FormatNumber1(Convert.ToInt32(item.PriceSale)) đ<span>@WebBanHangOnline.Models.Common.FormatNumber.FormatNumber1(Convert.ToInt32(item.Price)) đ</span></div>
                                                        <div style="display:none;" class="in_product_price"> @(Convert.ToInt32(item.PriceSale))</div>

                                                    }
                                                    else
                                                    {
                                                        <div class="product_price">@WebBanHangOnline.Models.Common.FormatNumber.FormatNumber1(Convert.ToInt32(item.Price)) đ</div>
                                                        <div style="display:none;" class="in_product_price">@(Convert.ToInt32(item.Price))</div>

                                                    }
                                                </div>
                                            </div>
                                            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>

                                        </div>
                                    }
                                }





                            </div>
                            <!-- Product Sorting -->

                            <div class="product_sorting_container product_sorting_container_bottom clearfix">
                                <ul class="product_sorting">
                                    <li>
                                        <span>Show:</span>
                                        <span class="num_sorting_text">04</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><span>01</span></li>
                                            <li class="num_sorting_btn"><span>02</span></li>
                                            <li class="num_sorting_btn"><span>03</span></li>
                                            <li class="num_sorting_btn"><span>04</span></li>
                                        </ul>
                                    </li>
                                </ul>
                                <div class="pages d-flex flex-row align-items-center">
                                    <div class="page_current">
                                        <span> @Model.PageNumber</span>
                                        <ul class="page_selection">
                                            @for (int i = 1; i <= Model.PageCount; i++)
                                            {
                                                <li><a href="@Url.Action("Index", new { page = i })">@i</a></li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="page_total"><span>of</span> @Model.PageCount</div>
                                    @if (Model.HasNextPage)
                                    {
                                        <div id="next_page" class="page_next"><a href="@Url.Action("Index", new { page = Model.PageNumber + 1 })"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
}